# =============================================================================
# Frontend Environment Variables (Next.js)
# =============================================================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API (Required)
# -----------------------------------------------------------------------------
# URL of the FastAPI backend
# Development: http://localhost:8000
# Production: https://your-backend-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# OpenAI ChatKit (Required)
# -----------------------------------------------------------------------------
# Get from: https://platform.openai.com/chatkit â†’ Domain Settings
NEXT_PUBLIC_OPENAI_DOMAIN_KEY=your-chatkit-domain-key

# -----------------------------------------------------------------------------
# Authentication - Better Auth (Required)
# -----------------------------------------------------------------------------
# IMPORTANT: Must match backend AUTH_SECRET exactly
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-secret-key-at-least-32-characters-long

# Auth URL (usually same as app URL)
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# App Configuration (Optional)
# -----------------------------------------------------------------------------
# App name displayed in UI
NEXT_PUBLIC_APP_NAME=Todo AI Chatbot

# Environment indicator
NEXT_PUBLIC_ENVIRONMENT=development
