# =============================================================================
# Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Database - Neon PostgreSQL (Required)
# -----------------------------------------------------------------------------
# Get from: https://console.neon.tech → Project → Connection Details
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://username:password@ep-xxx-xxx-123456.us-east-2.aws.neon.tech/todo_chatbot?sslmode=require

# -----------------------------------------------------------------------------
# OpenAI API (Required)
# -----------------------------------------------------------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model to use for chat completions
OPENAI_MODEL=gpt-4

# -----------------------------------------------------------------------------
# Authentication - Better Auth (Required)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
# IMPORTANT: Must be at least 32 characters and match frontend AUTH_SECRET
AUTH_SECRET=your-secret-key-at-least-32-characters-long

# JWT token expiration in days
AUTH_TOKEN_EXPIRY_DAYS=7

# -----------------------------------------------------------------------------
# Server Configuration (Optional)
# -----------------------------------------------------------------------------
# Host and port for uvicorn
HOST=0.0.0.0
PORT=8000

# Environment: development | staging | production
ENVIRONMENT=development

# Enable debug mode (disable in production)
DEBUG=true

# -----------------------------------------------------------------------------
# Rate Limiting (Optional - defaults shown)
# -----------------------------------------------------------------------------
# Requests per minute per user on chat endpoint
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# CORS (Required in production)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Development: http://localhost:3000
# Production: https://your-frontend-domain.vercel.app
CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Logging (Optional)
# -----------------------------------------------------------------------------
# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
